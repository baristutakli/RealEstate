<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("style", false)
    <style>
        body {
            background-color: #004882;
            padding:0.5rem !important;
        }
        label {
            color: #004882;
            font-weight: bold;
            font-family: Consolas;
        }
        main {
            border-radius: 5px;
        }
        nav {
            background-color:#cd472f;
        }
        img#page_icon {
            width: 70px;
            padding: 15px;
            background: #fffdbe;
            border-radius: 15px;
        }
        tr {
            vertical-align: initial;
        }
        .navbar-nav .nav-link {
            color: rgba(255,255,255,1) !important;
            background-color: rgba(255, 255, 255, 0.2);
            margin: 5px;
            border-radius: 7px;
        }
    </style>
</head>
<body class="">
    <main class="container bg-light p-0">
        <header class="row m-0 p-0">
            <section class="row p-5 bg-parimary m-0">
                <form id="searchestate" class="row d-flex flex-row">
                    @Html.AntiForgeryToken()
                    <section class="col-4">
                        <label>Real Estate Type</label>
                        <select class="form-select">
                            <option class="form form-text">Residential</option>
                            <option class="form form-text">Commercial</option>
                            <option class="form form-text">Land</option>
                        </select>
                    </section>
                    <section class="col-4">
                        <label>Advertise Type</label>
                        <select class="form-select">
                            <option class="form form-text">For Sale</option>
                            <option class="form form-text">For Rent</option>
                        </select>
                    </section>
                    <section class="col-4">
                        <label>Lets!</label>
                        <p>
                            <a class="btn btn-warning">Search Estates</a>
                        </p>
                    </section>
                </form>
            </section>

            <nav class="navbar navbar-expand-lg navbar-dark p-0">
                <div class="container-fluid">
                    @*<a class="navbar-brand" href="#">Real Estate</a>*@
                    <a class="navbar-brand" href="#">
                        <img id="page_icon" src="~/Media/IMG/icons/real_estate.png" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="#">Residential</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Commercial</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Land</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Address/Index">Addresses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Address/Add">Add Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/User/Create">Add User</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

        </header>
        @RenderBody()
    </main>
    
</body>
</html>
